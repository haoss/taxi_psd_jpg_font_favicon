                        i.ion-alert-circled.form-control__feedback
                          
                    .col-sm-4
                      .form-group.form-group--after.has-feedback
                        label.hidden Телефон
                        input(type="text" placeholder="Телефон").form-control
                        i.ion-alert-circled.form-control__feedback
                          
                  .row
                    .col-xs-12
                      .form-group.form-group--after.has-feedback
                        label.hidden Ваше сообщение
                        textarea(placeholder="Ваше сообщение").form-control
