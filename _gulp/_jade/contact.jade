          // Map
          #google.map
            
          // Google Map
          script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
          script.
            function initialize() {
            var myLatlng = new google.maps.LatLng(55.664256,37.5411063);
            var map_options = {
            zoom: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            center: myLatlng,
            scrollwheel: false,
            disableDefaultUI: true
            }
            var map = new google.maps.Map(document.getElementById('google'), map_options)
            var myIcon = new google.maps.MarkerImage('./img/icon-map.png', null, null, null, new google.maps.Size(95,96));
            var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            icon: myIcon
            });
